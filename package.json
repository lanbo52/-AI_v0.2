{
  "name": "cinemaforge",
  "productName": "CinemaForge 剧本工坊",
  "description": "AI驱动的短剧剧本创作与分镜生成系统",
  "version": "0.2.0",
  "author": "CinemaForge Team",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "electron:dev": "electron . --dev",
    "electron:build": "npm run build && electron-builder --win --x64",
    "electron:build:portable": "npm run build && electron-builder --win --x64 --publish never",
    "electron:build:mac": "npm run build && electron-builder --mac --universal --publish never",
    "electron:build:mac:arm64": "npm run build && electron-builder --mac --arm64 --publish never",
    "electron:build:mac:x64": "npm run build && electron-builder --mac --x64 --publish never"
  },
  "dependencies": {
    "@tiptap/extension-highlight": "^3.15.3",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/extension-text-align": "^3.15.3",
    "@tiptap/extension-typography": "^3.15.3",
    "@tiptap/extension-underline": "^3.15.3",
    "@tiptap/pm": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "@types/dompurify": "^3.0.5",
    "@types/file-saver": "^2.0.7",
    "@types/turndown": "^5.0.6",
    "@types/uuid": "^10.0.0",
    "clsx": "^2.1.1",
    "dexie": "^4.2.1",
    "dompurify": "^3.3.1",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.24.12",
    "html-docx-js-typescript": "^0.1.5",
    "lucide-react": "^0.562.0",
    "marked": "^17.0.1",
    "openai": "^6.15.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tiptap-markdown": "^0.9.0",
    "turndown": "^7.2.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "postcss": "^8.5.6",
    "tailwindcss": "3.4.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.cinemaforge.app",
    "productName": "CinemaForge 剧本工坊",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "electron.cjs",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
